<Window x:Class="DB2GX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DB2GX" Height="510" Width="754">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="288*" />
            <ColumnDefinition Width="427*" />
        </Grid.ColumnDefinitions>
        <GroupBox Header="Neu einrichten" Height="440" HorizontalAlignment="Left" Margin="9,19,0,0" Name="groupBox1" VerticalAlignment="Top" Width="334" IsEnabled="True" Grid.ColumnSpan="2">
            <Button Content="Einrichten" Height="58" Name="button1" Width="228" Margin="0,0,20,10" Click="button1_Click" VerticalAlignment="Bottom" HorizontalAlignment="Right" />
        </GroupBox>
        <StatusBar Height="23" HorizontalAlignment="Stretch" Name="statusBar1" VerticalAlignment="Bottom" ClipToBounds="False" Grid.ColumnSpan="2">
            <TextBlock Name="TextBlockStatus" />

        </StatusBar>
        <ListBox Height="69" HorizontalAlignment="Left" Margin="91,90,0,0" Name="databaseServers" VerticalAlignment="Top" Width="232" Loaded="databaseServers_Loaded" SelectionChanged="databaseServers_SelectionChanged" DataContext="{Binding}" ItemsSource="{Binding}" DisplayMemberPath="Name" SelectedValuePath="Value" Grid.ColumnSpan="2" />
        <ListBox Height="70" HorizontalAlignment="Left" Margin="91,187,0,0" Name="databases" VerticalAlignment="Top" Width="232" ItemsSource="{Binding}" SelectionChanged="databases_SelectionChanged" Grid.ColumnSpan="2" />
        <ListBox Height="54" HorizontalAlignment="Left" Margin="91,267,0,0" Name="hisProduct" VerticalAlignment="Top" Width="232" Loaded="hisProduct_Loaded" ItemsSource="{Binding}" Grid.ColumnSpan="2" />
        <Label Content="Server" Height="28" HorizontalAlignment="Left" Margin="17,90,0,0" Name="label1" VerticalAlignment="Top" Width="80" />
        <Label Content="Datenbank" Height="28" HorizontalAlignment="Left" Margin="17,187,0,0" Name="label2" VerticalAlignment="Top" Width="80" />
        <Label Content="GX Produkt" Height="28" HorizontalAlignment="Left" Margin="17,273,0,0" Name="label3" VerticalAlignment="Top" Width="80" />
        <GroupBox Grid.Column="1" Header="Löschen" Height="351" HorizontalAlignment="Left" Margin="63,14,0,0" Name="groupBox2" VerticalAlignment="Top" Width="334">
            <Grid Height="342" Width="333">
                <Button Content="Löschen" Height="58" Margin="56,0,49,36" Name="button2" VerticalAlignment="Bottom" Width="228" Click="button2_Click" />
                <ListBox Height="122" HorizontalAlignment="Left" Margin="55,27,0,0" Name="comboBox1" VerticalAlignment="Top" Width="239" Loaded="comboBox1_Loaded" SelectionChanged="comboBox1_SelectionChanged" />
                <TextBox Height="39" HorizontalAlignment="Left" Margin="56,0,0,116" Name="textBox1" VerticalAlignment="Bottom" Width="223" TextWrapping="Wrap" />
            </Grid>
        </GroupBox>
        <CheckBox Content="Benutzerdatenbanken Laden (Hintergrund)" Height="16" HorizontalAlignment="Left" Margin="38,165,0,0" Name="checkBoxLoadUserDBs" VerticalAlignment="Top" Checked="checkBox1_Checked" Unchecked="checkBox1_Unchecked" />
        <ListBox Height="46" HorizontalAlignment="Left" ItemsSource="{Binding}" Margin="91,327,0,0" Name="comboBoxEncoding" VerticalAlignment="Top" Width="232" Loaded="comboBoxEncoding_Loaded" Grid.ColumnSpan="2" />
        <Label Content="Encoding" Height="28" HorizontalAlignment="Left" Margin="17,333,0,0" Name="label4" VerticalAlignment="Top" Width="80" />
        <ListBox DataContext="{Binding}" DisplayMemberPath="" Height="42" HorizontalAlignment="Left" ItemsSource="{Binding}" Margin="91,38,0,0" Name="comboBoxDBType" VerticalAlignment="Top" Width="232" Loaded="comboBoxDBType_Loaded" SelectionChanged="comboBoxDBType_SelectionChanged" Grid.ColumnSpan="2" />
        <Label Content="Typ" Height="28" HorizontalAlignment="Left" Margin="17,44,0,0" Name="label5" VerticalAlignment="Top" Width="80" />
    </Grid>
</Window>